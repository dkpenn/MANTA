<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_trusted_peers"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mymanet.manta.TrustedPeersActivity"><![CDATA[
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true">





    ]]>

    <Button
        android:text="Delete All Peers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button4"
        android:onClick="deletePeers"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="89dp"
        android:layout_marginStart="89dp" />

    <ListView
        android:layout_width="370dp"
        android:layout_height="270dp"
        android:id="@+id/trusted_peers_list"
        android:layout_above="@+id/button4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="14dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Peer Device Name"
        android:ems="10"
        android:layout_marginBottom="51dp"
        android:id="@+id/peer_name"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_above="@+id/trusted_peers_list"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button12"
        android:layout_alignTop="@+id/peer_name"
        android:layout_toRightOf="@+id/peer_name"
        android:layout_toEndOf="@+id/peer_name"
        android:onClick="addPeer" />

</RelativeLayout>
